<div style="width:800px">
        <h3>Top <%= songs[0].genre %> Songs of the Week</h3>

        <!--<div  class="float-right">
                <a target="_blank" href="https://www.fritolay.com/snacks/buy-online.htm"><img src="https://englishinamerica.files.wordpress.com/2013/05/vintage-ad.png" alt="advertisment", width="25%" class="float-right"></a>
            </div>

            <div class="float-right">
                <a target="_blank" href="https://www.fritolay.com/snacks/buy-online.htm"><img src="https://englishinamerica.files.wordpress.com/2013/05/vintage-ad.png" alt="advertisment", width="25%" class="float-right"></a>
            </div>-->
            <script src="https://w.soundcloud.com/player/api.js" type="text/javascript"></script>

            <!--<script> var widgetId = 0;</script>
            <% var id = 0; %>-->
            <% songs.forEach((song, index) => { %>
                <div class="song">
                    <form action="/songs/play" method="POST" id="myform">
                        <input type="hidden" name="songId" value="<%= song.id %>"/>
                    

                            <iframe id='<%= index %>' width="100%" type="submit" height="166" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= song.sound %>&color=%23387187&auto_play=false&hide_related=false&show_comments=false&show_user=true&show_reposts=false&show_teaser=false"></iframe>

                            <script type="text/javascript">

                                var widgetIframe = document.getElementById(<%= index %>);
                                var widget = SC.Widget(widgetIframe);
                            
                                widget.bind(SC.Widget.Events.READY, function() {
                                  widget.bind(SC.Widget.Events.FINISH, function() {
                                      alert("finished")
                                      document.getElementById("myform").submit();
                                  });
                                });
                               // widgetId++;
                            </script>

                            <% id++ %>
                    </form>
                            <small><div class="float-left">listens: <%= song.playCount %></div></small>

                    <% if(typeof currentUser !== 'undefined') { %>

                        <% if(currentUser.role === 'admin') { %>
                            <div class="float-left">
                                <form action="/songs/<%= song.id %>/delete" method="POST">
                                    <input type="hidden"  value="<%= song %>"  name="song"/>
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>
                            </div>
                            <div class="float-left">
                                    <a href="/songs/<%= song.id %>/edit" class="btn btn-warning">Edit</a>
                            </div>
                            
                        <% } %>


                        <% if(song.getFavorites(currentUser.id)) { %> 
                            <div class="float-left">
                                <form  action="/songs/unfavorite" method="POST">
                                    <button type="submit" name="songId" value="<%= song.id %>" class="btn btn-danger">Unfavorite</button>
                                </form>
                            </div>
                        <% } else { %> 
                            <div class="float-left">
                                <form action="/songs/favorite" method="POST">
                                    <button  type="submit" name="songId" value="<%= song.id %>" class="btn btn-primary">Favorite</button>
                                </form>
                            </div>
                        <% } %>
                        <div class="float-left">
                            <form  action="/users/playlist/add" method="POST">
                                <button type="submit" name="songId" value="<%= song.id %>" class="btn btn-primary">Add to Playlist</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
            <% }) %>


    </div>