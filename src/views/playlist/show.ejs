<html>
<head>
    <% include ../static/partials/header.ejs %>
    <% include ../static/partials/navbar.ejs %>

</head>

<body>

    <% include ../static/partials/messages.ejs %>

    
    <div class="container">
        <div class="row">
            <div class="col text-center">
                <h1><%= playlist.name %></h1>
                <form id="delete" action="/users/playlist/playlists/<%= playlist.id %>/delete" method="GET">
                    <button onclick="areYouSure()" class="btn btn-danger btn-sm">delete playlist</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        function areYouSure() {
        var check = confirm("Are you sure you want to delete this playlist?")
        if (check) {
            document.getElementById("delete").submit();
        } else {
            event.preventDefault();
        }
        }
    </script>

    <% if(songs){ %>
        <% include ../static/partials/songList.ejs %>
    <% } %>
</body>
<% include ../static/partials/baseScripts.ejs %>
</html>