<div>
        <h3>Top <%= songs[0].genre %> songs of the week</h3>
        <div class="float-right" width="25%" height="100%">Advertisments</div><br/>
        <div><a target="_blank" href="https://www.fritolay.com/snacks/buy-online.htm"><img src="https://englishinamerica.files.wordpress.com/2013/05/vintage-ad.png" alt="advertisment", width="25%" class="float-right"></a></div>

            <% songs.forEach((song) => { %>
                <div >
                    <form action="/songs/play" method="POST" id="myform">
                        <input type="hidden" name="song" value="<%= song %>"/>
                        <input type="hidden" name="play" value="play"/>
                        <div onclick="document.getElementById('myform').submit()">

                            <iframe id="id" type="submit" class="float-left" width="75%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/<%= song.sound %>&color=%23387187&auto_play=false&hide_related=false&show_comments=false&show_user=true&show_reposts=false&show_teaser=false"></iframe>

                            <script src="https://w.soundcloud.com/player/api.js" type="text/javascript"></script>
                            <script type="text/javascript">
                            (function(){
                                console.log(song.sound)
                                var widgetIframe = document.getElementById("id"),
                                    widget       = SC.Widget(widgetIframe),
                                    newSoundUrl = 'http://api.soundcloud.com/tracks/13692671';

                                widget.bind(SC.Widget.Events.READY, function() {
                                // load new widget
                                    console.log(`\n\n finished sound \n\n`);
                                    document.getElementById("test").innerHTML = "YESSSSSSSSSSSSSSSSSS"
                                });

                            }());
                            </script>


                        </div>
                    </form>
                    <% if(typeof currentUser !== 'undefined') { %>

                        <% if(currentUser.role === 'admin') { %>
                            <div class="float-left">
                                <form action="/songs/<%= song.id %>/delete" method="POST">
                                    <input type="hidden"  value="<%= song %>"  name="song"/>
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>

                                
                                    <a href="/songs/<%= song.id %>/edit" class="btn btn-warning">Edit</a>
                                
                            </div>
                        <% } %>


                        <% if(song.getFavorites(currentUser.id)) { %> 
                            <div class="float-left">
                                <form action="/songs/unfavorite" method="POST">
                                    <button type="submit" name="songId" value="<%= song.id %>" class="btn btn-danger">Unfavorite</button>
                                </form>
                            </div>
                        <% } else { %> 
                            <div class="float-left">
                                <form action="/songs/favorite" method="POST">
                                    <button type="submit" name="songId" value="<%= song.id %>" class="btn btn-primary float-left">Favorite</button>
                                </form>
                            </div>
                        <% } %>

                        <form action="/users/playlist/add" method="POST">
                            <button type="submit" name="songId" value="<%= song.id %>" class="btn btn-primary">Add to Playlist</button>
                        </form>
                    <% } %>
                    <div>number of plays: <%= song.plays %></div>
                </div>
            <% }) %>


